{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "declaration": false,
        "experimentalDecorators": true,
        "allowJs": true,
        "lib": ["es6"],
        "types": ["node", "jest", "mocha"],
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "node_modules"
    ]
}
